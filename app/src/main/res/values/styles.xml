<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerStyle">@style/date_picker_style</item>
    </style>

    <style name = "EditTextTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/underline_select</item>
        <item name="colorControlNormal">@color/underline_normal</item>
    </style>

    <style name="mySwitchTheme">
        <item name="colorControlActivated">#FFB449</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColorPrimary">@color/underline_select</item>
        <item name="android:textColor">#000000</item>
        <item name="colorAccent">@color/underline_select</item>
    </style>

    <style name="TabText" parent="Theme.Design.NoActionBar">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DetailText">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinner_date_picker" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:datePickerStyle">@style/date_picker_style</item>
        <item name="colorAccent">#FFB449</item>
    </style>
    <style name="date_picker_style" parent="android:Widget.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="colorAccent">#FFB449</item>
    </style>

    <style name="RadioButton" parent="AppTheme">
        <item name="colorControlNormal">#A1A1A1</item>
        <item name="colorAccent">#FFE04A</item>
    </style>

    <color name="myColor_radioBtn_true">#FFE04A</color>
    <color name="myColor_radioBtn_false">#A1A1A1</color>
    <color name="underline_select">#FFB449</color>
    <color name="underline_normal">#FFE04A</color>
</resources>