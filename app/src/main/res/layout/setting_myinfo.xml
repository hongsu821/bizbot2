<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE04A"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/myinfo_close_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/backward_arrow"
            android:layout_margin="5dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="내정보 설정"
            android:textSize="18sp"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사업자 유형"
                android:textColor="#424242"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/noto_sans_regular"/>
            <RadioGroup
                android:id="@+id/business_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="22dp"
                android:paddingRight="22dp">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/reserve_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="예비창업자"
                    android:textColor="#000000"
                    android:theme="@style/RadioButton"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/private_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="개인사업자"
                    android:textColor="#000000"
                    android:theme="@style/RadioButton"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/corporation_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="법인사업자"
                    android:textColor="#000000"
                    android:theme="@style/RadioButton"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사업체명"
                android:textColor="#424242"
                android:textSize="18sp"
                android:padding="12dp"
                android:fontFamily="@font/noto_sans_regular"/>

            <EditText
                android:id="@+id/business_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:theme="@style/EditTextTheme"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="대표자"
                android:textColor="#424242"
                android:textSize="18sp"
                android:padding="12dp"
                android:fontFamily="@font/noto_sans_regular"/>

            <EditText
                android:id="@+id/ceo_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:theme="@style/EditTextTheme"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="#424242"
                android:textSize="18sp"
                android:padding="12dp"
                android:fontFamily="@font/noto_sans_regular"/>
            <RadioGroup
                android:id="@+id/gender_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="22dp"
                android:paddingLeft="22dp">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="남"
                    android:textColor="#000000"
                    android:theme="@style/RadioButton"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="여"
                    android:textColor="#000000"
                    android:theme="@style/RadioButton"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textColor="#424242"
                android:textSize="18sp"
                android:padding="12dp"
                android:fontFamily="@font/noto_sans_regular"/>
            <LinearLayout
                android:id="@+id/birth_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp">
                <TextView
                    android:id="@+id/birth_tx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2020.11.11"
                    android:textColor="#505050"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/down_arrow"
                    android:layout_gravity="center_vertical"
                    android:padding="12dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="업종"
                android:textColor="#424242"
                android:textSize="18sp"
                android:padding="12dp"
                android:fontFamily="@font/noto_sans_regular"/>
            <LinearLayout
                android:id="@+id/category_of_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp">
                <Spinner
                    android:id="@+id/category_of_business_spinner"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:spinnerMode="dialog"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지원 받고 싶은 분야"
                android:textColor="#424242"
                android:textSize="18sp"
                android:padding="12dp"
                android:fontFamily="@font/noto_sans_regular"/>
            <LinearLayout
                android:id="@+id/field_of_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingRight="22dp">
                <Spinner
                    android:id="@+id/large_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"/>
                <Spinner
                    android:id="@+id/medium_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:id="@+id/edit_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFE04A"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:textColor="#000000"
            android:textSize="22dp"
            android:padding="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans_bold"/>
    </LinearLayout>




</LinearLayout>