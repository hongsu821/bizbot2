<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:id="@+id/main">
    <LinearLayout
        android:id="@+id/intro_init_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE04A"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bizbot만이 가능한 270만개의 지원사업 분석기술로 우리회사에 꼭 맞는 지원사업을 받아보세요."
                android:textSize="18sp"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="9dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보 입력"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_margin="11dp"
                android:fontFamily="@font/noto_sans_extra_bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사업소재지*"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp">
                    <Spinner
                        android:id="@+id/intro_area_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown" />
                    <Spinner
                        android:id="@+id/intro_city_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사업자 유형*"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <RadioGroup
                    android:id="@+id/intro_business_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/intro_reserve_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="예비창업자"
                        android:textColor="#000000"
                        android:theme="@style/RadioButton"
                        android:padding="12dp"
                        android:fontFamily="@font/noto_sans_regular"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/intro_private_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="개인사업자"
                        android:textColor="#000000"
                        android:theme="@style/RadioButton"
                        android:padding="12dp"
                        android:fontFamily="@font/noto_sans_regular"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/intro_corporation_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="법인사업자"
                        android:textColor="#000000"
                        android:theme="@style/RadioButton"
                        android:padding="12dp"
                        android:fontFamily="@font/noto_sans_regular"/>
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사업체명"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>

                <EditText
                    android:id="@+id/intro_business_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:theme="@style/EditTextTheme"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="대표자"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>

                <EditText
                    android:id="@+id/intro_ceo_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:theme="@style/EditTextTheme"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="성별*"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <RadioGroup
                    android:id="@+id/intro_gender_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="22dp"
                    android:paddingLeft="22dp">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/intro_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="남"
                        android:textColor="#000000"
                        android:theme="@style/RadioButton"
                        android:padding="12dp"
                        android:fontFamily="@font/noto_sans_regular"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/intro_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="여"
                        android:textColor="#000000"
                        android:theme="@style/RadioButton"
                        android:padding="12dp"
                        android:fontFamily="@font/noto_sans_regular"/>
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="생년월일*"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <LinearLayout
                    android:id="@+id/intro_birth_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp">
                    <TextView
                        android:id="@+id/intro_birth_tx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2020.11.11"
                        android:textColor="#505050"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:fontFamily="@font/noto_sans_regular"/>
                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@drawable/down_arrow"
                        android:layout_gravity="center_vertical"
                        android:padding="12dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="업종"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp">
                    <Spinner
                        android:id="@+id/intro_category_of_business_spinner"
                        android:layout_width="0dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="지원 받고 싶은 분야"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <LinearLayout
                    android:id="@+id/intro_field_of_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp">
                    <Spinner
                        android:id="@+id/intro_large_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"/>
                    <Spinner
                        android:id="@+id/intro_medium_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/intro_next_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="#FFE04A"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입력완료"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/noto_sans_extra_bold"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/intro_loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="불러오는중..."
            android:textSize="16dp"
            android:textColor="#888888"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/noto_sans_regular"/>
        <ProgressBar
            android:id="@+id/intro_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_style"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:max="100"
            android:padding="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_logo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="visible">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/bizbot"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/bizbot_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="비즈봇"
            android:textSize="45dp"
            android:fontFamily="@font/noto_sans_extra_bold"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>