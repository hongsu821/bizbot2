<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2F2"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지원사업 검색"
            android:textSize="18dp"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="4dp"/>
        <ImageView
            android:id="@+id/search_close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close"
            android:layout_margin="8dp"
            android:padding="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/underline">

            <EditText
                android:id="@+id/search_edit_bar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="검색하실 내용을 입력하세요"
                android:textColorHint="#B5B5B5"
                android:background="@null"
                android:textColor="#000000"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/noto_sans_regular"/>

            <ImageView
                android:id="@+id/search_clear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/error_color"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/search_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/search_icon_color"
                android:layout_gravity="center_vertical"
                android:padding="9dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search_icon_black"
            android:layout_gravity="center_vertical"
            android:padding="9dp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:paddingLeft="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색 결과 "
                android:textColor="#000000"
                android:textSize="16dp"
                android:fontFamily="@font/noto_sans_regular"/>
            <TextView
                android:id="@+id/search_result_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234 "
                android:textColor="#FF7C09"
                android:textSize="16dp"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/noto_sans_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건 "
                android:textColor="#000000"
                android:textSize="16dp"
                android:fontFamily="@font/noto_sans_regular"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/item_list_style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="9dp">
                <TextView
                    android:id="@+id/search_title_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="제목"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/noto_sans_regular"/>
                <TextView
                    android:id="@+id/search_content_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="내용"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/noto_sans_regular"/>
                <TextView
                    android:id="@+id/search_agency_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="기관"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/noto_sans_regular"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/search_result_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일치하는 결과가 없습니다."
            android:textSize="22dp"
            android:textColor="#424242"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="22dp"
            android:fontFamily="@font/noto_sans_regular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_result_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/search_word_last_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 검색어"
            android:textSize="16dp"
            android:textColor="#000000"
            android:fontFamily="@font/noto_sans_regular"
            android:layout_marginLeft="12dp"
            android:paddingTop="6dp"/>
        <TextView
            android:id="@+id/search_word_best_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기 검색어"
            android:textSize="16dp"
            android:textColor="#000000"
            android:fontFamily="@font/noto_sans_regular"
            android:paddingTop="6dp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/search_word_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_word_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>
            <LinearLayout
                android:id="@id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginBottom="3dp">
                <TextView
                    android:id="@+id/search_word_clear_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모두 지우기"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:gravity="right"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>








</LinearLayout>