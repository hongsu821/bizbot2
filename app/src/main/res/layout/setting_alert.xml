<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="#FFE04A"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/alert_close_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/backward_arrow"
            android:layout_margin="5dp"
            android:padding="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 설정"
            android:textSize="18dp"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/alert_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="18dp"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="#000000"
            android:layout_margin="8dp"
            android:padding="4dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="알림 받기"
            android:textColor="#424242"
            android:textSize="18sp"
            android:padding="12dp"
            android:fontFamily="@font/noto_sans_regular"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/alert_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textOn=" "
            android:textOff=" " />
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#474747"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사업소재지"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp">
                    <Spinner
                        android:id="@+id/area_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown" />
                    <Spinner
                        android:id="@+id/city_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="알림 받을 키워드"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/noto_sans_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역에 상관없이 알림이 갑니다."
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:paddingLeft="12dp"
                    android:fontFamily="@font/noto_sans_regular"/>

                <EditText
                    android:id="@+id/keyword1_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:theme="@style/EditTextTheme"
                    android:textColor="#000000"
                    android:hint="1."
                    android:fontFamily="@font/noto_sans_regular"/>
                <EditText
                    android:id="@+id/keyword2_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:theme="@style/EditTextTheme"
                    android:textColor="#000000"
                    android:hint="2."
                    android:fontFamily="@font/noto_sans_regular"/>
                <EditText
                    android:id="@+id/keyword3_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:theme="@style/EditTextTheme"
                    android:textColor="#000000"
                    android:hint="3."
                    android:fontFamily="@font/noto_sans_regular"/>
            </LinearLayout>
        </ScrollView>


</LinearLayout>