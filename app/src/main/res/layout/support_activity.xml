<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="데이터를 불러올 수 없습니다."
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFE04A">
        <ImageButton
            android:id="@+id/category_menu_btn"
            android:layout_width="30sp"
            android:layout_height="32sp"
            android:background="@drawable/menu"
            android:layout_marginLeft="10sp"/>
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="32sp"
            android:layout_weight="1"
            android:background="@drawable/search_bar"
            android:layout_margin="10sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="6sp"
                android:layout_marginBottom="5sp"/>
            <ImageView
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:background="@drawable/search"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/support_close_btn"
            android:layout_width="30sp"
            android:layout_height="32sp"
            android:background="@drawable/close"
            android:layout_marginRight="10sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFE04A"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFE04A"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="3dp"/>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/support_list_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="총   건"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/pin"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/area_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:text="서울"
            android:textColor="#000000"/>


        <Spinner
            android:id="@+id/support_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:entries="@array/sort_mode"
            android:gravity="right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/support_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/top_move_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="29dp"
            android:src="@drawable/up_arrow"
            android:backgroundTint="#FFE04A"
            app:borderWidth="0dp"
            android:visibility="gone"/>


    </RelativeLayout>
</LinearLayout>
